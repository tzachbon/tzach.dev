{
  "name": "tzach.dev",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "cleanBuild": "yarn run rimraf .next",
    "prebuild": "yarn cleanBuild",
    "build": "lerna exec yarn build",
    "start": "yarn start:ssr",
    "start:ssr": "lerna exec --scope ssr yarn start",
    "dev": "yarn dev:ssr",
    "dev:ssr": "lerna exec --scope ssr yarn dev",
    "lint:fix": "lerna exec yarn lint:fix"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  }
}

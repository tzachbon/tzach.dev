{
  "name": "tzach.dev",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4"
  },
  "scripts": {
    "start": "yarn start:ssr",
    "start:ssr": "lerna run --scope ssr start",
    "dev": "yarn dev:ssr",
    "dev:ssr": "lerna run --scope ssr dev",
    "lint": "lerna run lint"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}